
{
  "manifest_version": 2,
  "name": "Copy Tab Title",
  "version": "1.0",
  "description": "A simple extension to copy the tab title to the clipboard.",
  "permissions": ["activeTab", "clipboardWrite"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Copy Tab Title",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
